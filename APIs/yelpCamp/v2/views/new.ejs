<%- include("partials/header.ejs") %>

    <div class="container">
        
            <h1 style="text-align: center;">Create New City</h1>

            <div style="width:30%; margin:25px auto;">
                <form action="/cities" method="POST">
                    
                    <div class="form-group">
                        <input class = "form-control" type = "text" name = "cityName" placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <input class = "form-control" type = "text" name="img" placeholder="Enter Image url">
                    </div>
                    <div class="form-group">
                        <input class = "form-control" type = "text" name="description" placeholder="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit</button>
                    </div>

                </form>
                <a href="/cities" > View Cities</a>
            </div>
        
    </div>
